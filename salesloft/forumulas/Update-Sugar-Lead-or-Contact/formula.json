        {
            "name": "prepPayload",
            "onFailure": [],
            "onSuccess": [
                "isLead"
            ],
            "properties": {},
            "type": "script"
        },
        {
            "name": "isLead",
            "onFailure": [
                "updateSugarContact"
            ],
            "onSuccess": [
                "updateSugarLead"
            ],
            "properties": {},
            "type": "filter"
        },
        {
            "name": "updateSugarLead",
            "onFailure": [],
            "onSuccess": [],
            "properties": {
                "api": "/leads/${steps.getPersonDetails.response.body.sugar_id}",
                "body": "${steps.prepPayload.payload}",
                "elementInstanceId": "${config.destination}",
                "method": "PATCH"
            },
            "type": "elementRequest"
        },
        {
            "name": "updateSugarContact",
